<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pyamsoft.fridge">

  <application
      android:name="com.pyamsoft.fridge.MyFridgeSmells"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/Theme.Fridge.Normal"
      tools:ignore="GoogleAppIndexingWarning">

    <!-- Support super wide screen -->
    <meta-data
        android:name="android.max_aspect"
        android:value="2.1"/>

    <!-- Disable Analytics Collection from Firebase -->
    <meta-data
        android:name="firebase_analytics_collection_deactivated"
        android:value="true"/>

    <!-- Disable advertising id collection from Firebase -->
    <meta-data
        android:name="google_analytics_adid_collection_enabled"
        android:value="false"/>

    <!-- Download OCR model -->
    <meta-data
        android:name="com.google.firebase.ml.vision.DEPENDENCIES"
        android:value="ocr"/>

    <!-- Main Activity -->
    <activity
        android:name="com.pyamsoft.fridge.main.MainActivity"
        android:excludeFromRecents="false"
        android:exported="true"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:noHistory="false"
        android:theme="@style/Theme.Fridge.Splash"
        android:windowSoftInputMode="adjustResize">

      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>

    </activity>

    <receiver
        android:name=".locator.LocationUpdateReceiver"
        android:exported="false">
      <intent-filter>
        <action android:name="@string/locator_broadcast_receiver_action"/>
      </intent-filter>
    </receiver>

  </application>
</manifest>
