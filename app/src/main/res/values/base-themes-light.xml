<resources>

  <style name="Base.Theme.Fridge.Light" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/red500</item>
    <item name="colorPrimaryDark">@color/red700</item>
    <item name="colorAccent">@color/red500</item>
    <item name="android:navigationBarColor">@color/red700</item>
    <item name="dialogTheme">@style/Theme.Fridge.Light.Dialog</item>
    <item name="alertDialogTheme">@style/Theme.Fridge.Light.Dialog</item>
  </style>

  <!-- Dialogs -->
  <style name="Theme.Fridge.Light.Dialog" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert">
    <item name="colorPrimary">@color/red500</item>
    <item name="colorPrimaryDark">@color/red700</item>
    <item name="colorAccent">@color/red500</item>
    <item name="android:navigationBarColor">@color/red700</item>
  </style>

  <!-- Normal App Theme -->
  <style name="Base.Theme.Fridge.Light.Normal" parent="@style/Base.Theme.Fridge.Light">
    <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    <item name="android:windowBackground">@color/white</item>
  </style>

</resources>
