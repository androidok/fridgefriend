<resources>

    <style name="Theme.Fridge.Normal" parent="@style/Base.Theme.Fridge.Normal">
        <item name="dialogTheme">@style/Theme.Fridge.Dialog</item>
        <item name="alertDialogTheme">@style/Theme.Fridge.Dialog</item>

        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Fridge.Dialog" parent="@style/Base.Theme.Fridge.Dialog">
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Fridge.Dialog.Alert" parent="@style/Base.Theme.Fridge.Dialog.Alert">
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Splash screen -->
    <style name="Theme.Fridge.Splash" parent="@style/Base.Theme.Fridge.Splash">
        <item name="android:windowLightNavigationBar">true</item>
    </style>

</resources>
