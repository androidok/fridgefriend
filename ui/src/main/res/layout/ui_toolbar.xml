<merge>

    <com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ui_toolbar_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/ui_toolbar_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:title="@string/blank"
            app:titleMargin="0dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ui_toolbar_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|start"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                app:boxBackgroundColor="@null"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="4dp"
                app:boxCornerRadiusBottomStart="4dp"
                app:boxCornerRadiusTopEnd="4dp"
                app:boxCornerRadiusTopStart="4dp"
                app:boxStrokeColor="@color/grey500"
                app:hintTextColor="@color/white"
                app:startIconCheckable="false"
                app:startIconContentDescription="Search"
                app:startIconDrawable="@drawable/ic_search_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Search"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="8dp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

            </com.google.android.material.textfield.TextInputLayout>

        </com.google.android.material.appbar.MaterialToolbar>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/ui_toolbar_tabs"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/transparent"
            app:tabBackground="@color/transparent"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/colorOnPrimary"
            app:tabIndicatorFullWidth="false"
            app:tabMode="fixed"
            app:tabPadding="4dp"
            app:tabSelectedTextColor="@color/colorOnPrimary"
            app:tabTextColor="@color/disabledColor" />

    </com.google.android.material.appbar.AppBarLayout>

</merge>
